{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": ".",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "preserve",
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"preserveConstEnums": true,
		"removeComments": false,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"target": "es2017",
		"downlevelIteration": true,
		"lib": ["dom", "es2017"],
		"paths": {
			"@project/sveltekit": ["../sveltekit/src"],
			"@project/shared": ["../shared/src"]
		}
	}
}
